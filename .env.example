# ===== REQUIRED API KEYS =====
# Google AI (Gemini) API Key - ได้จาก https://ai.google.dev
GOOGLE_API_KEY=your_google_api_key_here

# Tavily Search API Key - ได้จาก https://tavily.com (Optional)
TAVILY_API_KEY=your_tavily_api_key_here

# ===== API CONFIGURATION =====
# Maximum length of user message
MAX_MESSAGE_LENGTH=1000

# Response timeout in seconds
RESPONSE_TIMEOUT=30

# Enable PDF upload feature
ENABLE_PDF_UPLOAD=true

# ===== SERVER CONFIGURATION =====
# FastAPI server host
API_HOST=0.0.0.0

# FastAPI server port
API_PORT=8000

# Environment (development/production)
ENVIRONMENT=development

# ===== LOGGING CONFIGURATION =====
# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Log file path (optional)
LOG_FILE=logs/api.log

# ===== SECURITY CONFIGURATION =====
# Secret key for session management (generate a secure random string)
SECRET_KEY=your_secret_key_here

# Allowed origins for CORS (comma separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ===== DATABASE CONFIGURATION (Future use) =====
# หากในอนาคตต้องการเก็บข้อมูลใน database
# DATABASE_URL=sqlite:///./thammasat_ai.db
# DATABASE_URL=postgresql://user:password@localhost/thammasat_ai

# ===== RATE LIMITING (Future use) =====
# Maximum requests per minute per IP
# RATE_LIMIT_PER_MINUTE=60

# ===== FILE UPLOAD LIMITS =====
# Maximum file size for PDF uploads (in MB)
MAX_FILE_SIZE_MB=10

# Allowed file extensions
ALLOWED_EXTENSIONS=pdf,txt,docx